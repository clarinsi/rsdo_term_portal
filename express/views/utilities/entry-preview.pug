.bg-white.add-padding-1.rounded-3.me-1.g-0col-sm-4
  .dictionary-content-top.mx-0
    .mb-1.d-flex.align-items-baseline.row
      .d-sm-block.col-sm-4.preview-column-width
        span.smaller-gray-info= t('TERMIN:')
      .flex-grow-1.col-lg-4
        if (structure)
          span#selected-term.bold-blue-subheading.text-break
        else
          span#selected-term.bold-blue-subheading.text-break davčno izogibanje
    //- .headword-preview.mt-1.d-flex.align-items-baseline.row
    //-   .d-sm-block.col-sm-4.preview-column-width
    //-     span.smaller-gray-info OBLIKE, NAGLASI, IZGOVOR:
    //-   .flex-grow-1.flex-column.col-sm-4
