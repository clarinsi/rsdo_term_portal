.collapsable-entry-part.collapse
  .d-xl-flex.align-items-center.justify-content-between
    .d-sm-flex.col-xl-6.col-12
      .col-12.col-sm-3.flex-fill.me-2
        span.term-id.normal-gray-label
      .col-12.col-sm-3.flex-fill
        span#preview-version.normal-gray-label Verzija 1
    .d-sm-flex.col-xl-6.col-12.align-items-center
      .col-12.col-sm-3.flex-fill
        span#preview-author.normal-gray-label Ime Priimek
      .col-12.col-sm-3.flex-fill.ms-sm-2
        span.normal-gray-label Zaporedje:
        input#preview-homonym.ms-2.homonym-field.form-control.d-inline(
          type="text"
          disabled
        )

  .d-xl-flex.align-items-center.mt-3.justify-content-between
    .d-sm-flex.col-xl-6.col-12.align-items-center
      .col-12.col-sm-3.flex-fill.me-2
        select#status-overview.form-select.select-content-state.w-auto(
          disabled
        )
          option(value="preposition" disabled) Predlog
          option(value="edited") Urejeno
          option(value="in-editing") V urejanju

      .col-12.col-sm-3.flex-fill
        .form-check.form-switch
          input#published-overview.form-check-input.me-2(
            type="checkbox"
            name="isPublished"
            disabled
          )
          label.normal-gray-label(for="") Objavljeno

    .d-sm-flex.col-xl-6.col-12.align-items-center
      .col-12.col-sm-3.flex-fill
        input#terminology-overview.form-check-input.special-cbox.me-2(
          type="checkbox"
          name=""
          disabled
        )
        label.normal-gray-label(for="") Strokovno pregledano
      .col-12.col-sm-3.flex-fill.ms-sm-2
        input#language-overview.form-check-input.special-cbox.me-2(
          type="checkbox"
          name=""
          disabled
        )
        label.normal-gray-label(for="") Jezikovno pregledano

.d-flex.justify-content-between.align-items-center.collapsible-data
  .collapse-content
    .d-flex.collapsed-text.align-items-center
      .white-background
        span.status-collapsed.normal-gray.m-2 V urejanju
      .published-collapsed.d-flex.d-none
        span.normal-gray.ms-2 |
        span.normal-gray.ms-2 Objavljeno
      .terminology-collapsed.d-flex.d-none
        span.normal-gray.ms-2 |
        span.normal-gray.ms-2 Strokovno pregledano
      .lang-collapsed.d-flex.d-none
        span.normal-gray.ms-2 |
        span.normal-gray.ms-2 Jezikovno pregledano
      .homonim-collapse-div.d-flex.d-none
        span.normal-gray.ms-2 |
        span.homonim-collapsed.normal-gray.ms-2
  a.collapsable-entry-btn.entry-collapsed.btn.p-0.me-2(
    data-bs-toggle="collapse"
    href=".collapsable-entry-part"
    role="button"
    aria-expanded="false"
    aria-controls="collapseExample"
  )
    img(src="/images/chevron-right.svg") 

.note-section
  .message-container.d-none
    .task.task-declined.p-2.mb-4.me-2.mt-2
      .d-sm-flex.justify-content-sm-between.d-grid.mt-2
        .d-grid
          .d-flex.align-items-center
            img(src="/images/alert-triangle-dark-red.svg")
            span.ms-2.normal-red-note Slovarski sestavek je neveljaven
          ul.mt-2.ms-4.mb-2
            li.error-type-1.heavy-gray-text.d-none Tip napake 1 (ni slovenskega termina)
            li.error-type-2.heavy-gray-text.d-none Tip napake 2 (ni definicije ali tujejeziƒçnega termina)
