          h1#site-heading #{ t("O terminu") }

      hr#disposable-break.mt-0
      .d-flex.mb-4.w-100.flex-column
        .result-detail-main.w-100 
          .row.g-0
            //-   .col-md-1
                .results-item-language.d-flex.pe-3.flex-shrink-1
